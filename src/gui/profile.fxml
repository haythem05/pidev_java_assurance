<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="root" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.ProfileController">
    <children>
        <VBox layoutX="168.0" layoutY="20.0" prefHeight="360.0" prefWidth="265.0" spacing="20.0">
            <HBox spacing="10.0" alignment="CENTER">
                <ImageView fx:id="profileImage" fitHeight="150.0" fitWidth="150.0" pickOnBounds="true" preserveRatio="true" />
                <VBox spacing="10.0">
                    <Button fx:id="uploadButton" mnemonicParsing="false" text="Upload Profile Picture" />
                    <Button fx:id="modifyButton" mnemonicParsing="false" text="Modifier" />
                </VBox>
            </HBox>
            <Label fx:id="fullNameLabel" alignment="CENTER" prefHeight="25.0" prefWidth="200.0" style="-fx-font-weight: bold;" textAlignment="CENTER">
                <font>
                    <Font name="System Bold" size="18" />
                </font>
            </Label>
            <HBox spacing="10.0">
                <Label text="Nom:" />
                <Label fx:id="lastNameLabel" />
            </HBox>
            <HBox spacing="10.0">
                <Label text="Prenom:" />
                <Label fx:id="firstNameLabel" />
            </HBox>
            <HBox spacing="10.0">
                <Label text="Email:" />
                <Label fx:id="emailLabel" />
            </HBox>
            <HBox spacing="10.0">
                <Label text="Numéro de téléphone:" />
                <Label fx:id="phoneLabel" />
            </HBox>
            <HBox spacing="10.0">
                <Label text="CIN:" />
                <Label fx:id="cinLabel" />
            </HBox>
            <HBox spacing="10.0">
                <Label text="Date de naissance:" />
                <Label fx:id="birthDateLabel" />
            </HBox>
            <!-- Add more profile details here -->
        </VBox>
    </children>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
</AnchorPane>